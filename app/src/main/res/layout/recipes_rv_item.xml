<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="@dimen/recipe_image_width"
        android:layout_height="@dimen/recipe_image_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/rv_recipes_margin"
        android:src="@drawable/default_meal_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_recipe_image"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/recipe_test_name"/>

        <TextView
            android:id="@+id/tv_recipe_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/testing_recipe"/>
    </LinearLayout>


</RelativeLayout>